<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Button?>
<HBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="565.0" minHeight="-Infinity" minWidth="-Infinity" prefWidth="570.0" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.51" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.com.matrixprogramming.view.MovieController">
    <ImageView fx:id="posterImage">

    </ImageView>
    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
        <HBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
            <Text fx:id="movieTitleText" wrappingWidth="250.0">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="voteAverageLabel" text="6.7">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <ImageView fx:id="starIcon" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">

            </ImageView>

            <Button fx:id="favButton">
            <graphic>
                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image fx:id="favImage" url="/star.png"/>
                    </image>
                </ImageView>
            </graphic>
            </Button>

        </HBox>
        <Text fx:id="movieDescription"  wrappingWidth="250.0" />
      <Region nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS" />
        <HBox>
            <Region HBox.hgrow="ALWAYS" />
            <Text fx:id="movieReleaseDate">
                <font>
                    <Font size="14.0" />
                </font>
            </Text>
        </HBox>
    </VBox>

</HBox>
