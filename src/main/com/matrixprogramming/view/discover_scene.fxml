<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8.0.51"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.com.matrixprogramming.view.DiscoverSceneController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="close" mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <ListView id="myList" maxHeight="545.0" prefWidth="600.0" BorderPane.alignment="TOP_LEFT"
                  fx:id="movieListView"/>
    </left>
    <right>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="200.0" prefWidth="200.0"
              BorderPane.alignment="CENTER" >
            <children>
                <ComboBox fx:id="sortByComboBox" prefWidth="200.0" promptText="Sort by"/>
                <Button fx:id="discoverButton" mnemonicParsing="false" text="Discover">
                    <VBox.margin>
                        <Insets left="65.0"/>
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </right>
</BorderPane>
